<%= simple_form_for @patient do |form| %>
  <%= form.error_notification %>

  <%= form.input :name%>

	<%= form.input :gender, collection: ['F', 'M']%>

  <%= form.input :birth_date, order:[:day,:month,:year], start_year: 1900%>

  <%= form.input :email, placeholder: "name@host.com"%>

  <%= form.input :phone, placeholder: "99 99999-9999" %>

  <%= form.input :address %>

  <%= form.input :address_number %>

  <%= form.input :address_complement %>

  <%= form.input :city %>

  <%= form.input :address_uf, collection: CS.states(:br) %>

  <%= form.button :submit, "Salvar",class: "btn-primary" %>
  <%= link_to 'Voltar', root_path, class: "btn btn-primary" %>
<% end %>

