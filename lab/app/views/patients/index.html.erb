<div class="container-fluid">
	<h1>Pacientes Cadastrados</h1>

		<table class="table ">
			<thead class="text-primary">
				<tr>
					<th scope="col">Nome</th>
					<th scope="col">Email</th>
					<th scope="col">Data de Nascimento</th>
					<th scope="col" colspan="3" style="text-align: center"></th>
				</tr>
			</thead>
			<tbody>
				<% @patients.each do |p| %>
					<tr>
						<td><%= p.name %></td>
						<td><%= p.email %></td>
						<td><%= p.birth_date.strftime("%d/%m/%Y") %></td>
						<td><%= link_to 'Detalhes', patient_path(p), class: "btn btn-primary" %></td>
						<td><%= link_to 'Editar', edit_patient_path(p), class: "btn btn-primary" %></td>
            <td><%= link_to 'Deletar', patient_path(p), class: "btn btn-danger",
                      method: :delete, data: { confirm: 'VocÃª tem certeza que deseja excluir?' } %>
					</tr>
				<% end %>
			</tbody>
		</table>

	<%= link_to 'Novo Paciente', new_patient_path, class: "btn btn-primary" %>
</div>

